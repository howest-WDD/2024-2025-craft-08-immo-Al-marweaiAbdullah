								<img src="{{url('img/icons/bed.svg')}}" alt="">
								<p>{{detail.bedrooms}} beds
								</p>
							</div>
							<div class="c-immo-card__icons">
								<img src="{{url('img/icons/bath.svg')}}" alt="">
								<p>{{detail.bathrooms}} baths
								</p>
							</div>
							<div class="c-immo-card__icons">
								<img src="{{url('img/icons/sqf.svg')}}" alt="">
								<p>{{detail.size}}m²
								</p>
							</div>
						{% endfor %}
						</div>

					</div>
				</a>
			</div>
